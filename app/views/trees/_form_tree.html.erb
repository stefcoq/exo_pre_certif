<%= simple_form_for @tree  do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
      <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :price %>
    <%= f.input :quantity_by_year %>
    <%= f.input :fruit, collection: ["Apple",
                                    "Apricot",
                                    "Cherry",
                                    "Chestnut",
                                    "Coconut",
                                    "Fig",
                                    "Grapefruit",
                                    "Hazel",
                                    "Mandarin",
                                    "Mango",
                                    "Mirabellier",
                                    "Mulberry",
                                    "Olivier",
                                    "Orange",
                                    "Pear",
                                    "Plum"] %>
    <%= f.input :description %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
